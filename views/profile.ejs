<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile - <%= user?.username || 'Guest' %>
    </title>
    <link rel="stylesheet" href="/stylesheet/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="min-h-screen flex flex-col bg-zinc-900 text-white">

    <!-- Navbar -->
    <%- include('partials/nav') %>

        <!-- Main Container -->
        <div class="container mx-auto flex flex-col md:flex-row gap-8 p-6">

            <!-- Left Section (Profile + Create Post) -->
            <div class="w-full md:w-2/5 flex flex-col space-y-6">

                <!-- Profile Card -->
                <div class="bg-zinc-800 p-6 rounded-lg shadow-md border border-zinc-700 flex justify-between items-center">
                    <div>
                        <h2 class=" text-xl md:text-2xl font-semibold">Hello, <%= user?.username || 'Guest' %> üëãüèª</h2>
                        <p class="text-zinc-400 text-sm mt-4">
                            <%= user?.createdAt ? new Date(user.createdAt).toLocaleDateString('en-IN', {
                                year: 'numeric' , month: 'long' , day: 'numeric' }) : 'N/A' %>
                        </p>
                    </div>

                    <!-- Logout Button -->
                    <a href="/user/logout"
                        class="bg-red-600 hover:bg-red-700 text-white font-semibold py-2 px-4 rounded-lg transition duration-300">
                        Logoutüö™
                    </a>
                </div>

                <!-- Post Creation Box -->
                <div class="bg-zinc-800 p-6 rounded-lg shadow-md border border-zinc-700">   
                    <h2 class="text-xl text-zinc-300 font-semibold mb-3">Create a Post üìù</h2>

                    <form action="/posts/create" method="post" class="space-y-3">
                        <textarea name="content" rows="7" placeholder="Write your thought..."
                            class="w-full p-3 rounded-lg bg-zinc-700 text-white border border-zinc-600 outline-none resize-none"></textarea>
                        <button type="submit"
                            class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold p-3 rounded-lg transition duration-300">
                            Create Post
                        </button>
                    </form>

                </div>

            </div>

            <!-- Right Section (Posts) -->
            <div class="w-full md:w-3/5 space-y-5">

                <div class="flex justify-center items-center border-b border-zinc-700 py-6">
                    <h2 class="text-2xl text-zinc-300 font-semibold">Your Posts</h2>
                </div>

                <div class="postcontainer">
                    <% if (user.posts.length> 0) { %>
                        <% user.posts.reverse().forEach((post)=> { %>

                            <!-- Post Card -->
                            <div class="bg-zinc-800 p-5 rounded-lg shadow-md border border-zinc-700 mb-4">
                                <div class="flex justify-between items-center">
                                    <span class="text-blue-400 font-semibold">@<%= user.username %></span>
                                    <span class="text-xs text-zinc-500">
                                        <%= post.createdAt ? new Date(post.createdAt).toLocaleDateString('en-IN', {
                                            year: 'numeric' , month: 'long' , day: 'numeric' }) : 'N/A' %>
                                    </span>
                                </div>
                                <p class="text-zinc-300 mt-3">
                                    <%= post.content.trim() %>
                                </p>
                                <div class="flex justify-between items-center text-zinc-400 text-sm mt-5">
                                    <button class="hover:text-blue-400 transition">üëç Like <span
                                            class="ml-2">0</span></button>
                                    <button class="hover:text-yellow-400 transition">‚úè Edit</button>

                                    <!-- Delete Post (Using Form for Security) -->
                                    <form action="/posts/delete/<%= post._id %>" method="POST" class="inline-block">
                                        <button type="submit" class="hover:text-red-500 transition">üóë Delete</button>
                                    </form>
                                </div>
                            </div>

                            <% }) %>
                                <% } else { %>
                                    <div class="text-lg text-zinc-500 font-bold text-center mt-20">No Posts Yet üìù</div>
                                    <% } %>
                </div>

            </div>

        </div>

</body>

</html>