<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Social Post</title>
    <link rel="stylesheet" href="/stylesheet/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="h-full w-full">
    
    <%- include('partials/nav') %>
    
    <div class="w-full py-8 px-7 flex gap-3 md:gap-5 flex-wrap justify-center">
        <% if (posts.length > 0) { %>
            <% posts.forEach(post => { %>
                <div class="w-full md:w-[80vw] bg-zinc-800 p-5 rounded-lg shadow-md border border-zinc-700">
                    
                    <!-- Post Header -->
                    <div class="flex justify-between items-center">
                        <span class="text-blue-400 font-semibold">
                            @<%= post.user.username %>
                        </span>
                        <div class="text-xs text-zinc-500 flex items-center gap-5">
                            <span>
                                <%= new Date(post.createdAt).toLocaleDateString('en-IN', {
                                    year: 'numeric', month: 'long', day: 'numeric' }) %>
                            </span>
                            <span>
                                <%= new Date(post.createdAt).toLocaleTimeString('en-IN', {
                                    hour: '2-digit', minute: '2-digit', hour12: true }) %>
                            </span>
                        </div>
                    </div>
                    
                    <!-- Post Content -->
                    <p class="text-zinc-300 mt-3">
                        <%= post.content %>
                    </p>
                    
                    <!-- Like Button -->
                    <div class="flex justify-start items-center text-zinc-400 text-sm mt-5">
                        <button class="hover:text-blue-400 transition">üëç Like <span class="ml-2">0</span></button>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <div class="text-xl text-zinc-500 font-bold text-center mt-20">
                Explore Now! Login
            </div>
        <% } %>
    </div>
    
</body>

</html>
